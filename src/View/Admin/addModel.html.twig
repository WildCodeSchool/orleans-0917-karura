{% extends 'base.html.twig' %}

{% block pageTitle %}Administration des Modèles{% endblock %}

{% block content %}
    <h1>Ajouter un modèle</h1>
    <div class="container">
        <div class="row">
            <form action="index.php?route=adminmodeladd" method='post'>
                <div class="form-group">
                    <label for="name">Nom du modèle</label>
                    <input id="name" type="text" class="form-control" name="name" value="{{ post.name ?: '' }}">
                    {% if errors.name %}
                        <li style="color:red">{{ errors.name }}</li>{% endif %}

                    <label for="desc">Description</label>
                    <textarea name="description" id="desc" cols="30" rows="10">{{ post.description ?: '' }}</textarea>

                    <label for="cat">Catégorie</label>
                    <select name="category" id="cat">
                        {% for category in categories %}
                        <option value="{{ category.id }}"
                                {{ category.id == model.categoryId ? 'selected' }}>{{ category.name }}</option>
                        {% endfor %}
                    </select>

                </div>
                <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-plus"
                                                                 aria-hidden="true"> Ajouter</span></button>
            </form>

            <form action="index.php?route=adminmodel" method='post'>
                <button type="submit" class="btn btn-danger">Annuler</button>
            </form>
        </div> <!-- end row -->
    </div>

{% endblock %}
