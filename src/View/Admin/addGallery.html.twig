{% extends 'Admin/baseadmin.html.twig' %}

{% block pageTitle %}Ajouter une image{% endblock %}

{% block content %}

    <div class="container">
        <h1>Ajouter une image à la galerie</h1>

        <div class="row">
            <div class="col-lg-2">
                <form action="admin.php?route=admingalleryadd" method='post' enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="back">Image à ajouter</label>
                        <input type="file" name="files" accept="image/*">
                    </div>

                    <button type="submit" class="adminButton btn btn-info" name="adding" value="1"><span
                                class="glyphicon glyphicon-plus"
                                aria-hidden="true"></span> Ajouter</button>

                    <a href="admin.php?route=admingallery"
                       class="adminButton btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Annuler
                    </a>

                </form>
            </div>
        </div>
    </div>

{% endblock %}
