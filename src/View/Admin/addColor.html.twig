{% extends 'base.html.twig' %}

{% block pageTitle %}Administration des couleurs{% endblock %}

{% block content %}
    <h1>Ajouter une couleur</h1>
    <div class="container">
        <div class="row">
            <form action="index.php?route=admincoloradd" method='post'>
                <div class="form-group">
                    <label for="name">Nom de la couleur</label>
                    <input id="name" type="text" class="form-control" name="name" value="{{ post.name ?: '' }}">
                    {% if errors.name %}
                        <li style="color:red">{{ errors.name }}</li>{% endif %}

                    <label for="hexa">Code couleur</label>
                    <input id="hexa" type="color" class="form-control" name="hexa" value="{{ post.hexa ?: '' }}">
                </div>
                <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-plus"
                                                                 aria-hidden="true"> Ajouter</span></button>
            </form>

            <form action="index.php?route=admincolor" method='post'>
                <button type="submit" class="btn btn-danger">Annuler</button>
            </form>
        </div> <!-- end row -->
    </div>

{% endblock %}
