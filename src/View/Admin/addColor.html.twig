{% extends 'Admin/baseadmin.html.twig' %}

{% block pageTitle %}Administration des couleurs{% endblock %}

{% block content %}
    <h1>Ajouter une couleur</h1>
    <form class="contactForm" action="admin.php?route=admincoloradd" method='post'>
        <div class="form-group">
            <label for="name">Nom de la couleur</label>
            <input id="name" type="text" class="form-control" name="name" value="{{ post.name }}">
            {% if errors.name %}
                <strong style="color:red">{{ errors.name }}</strong>
            {% endif %}
        </div>
        <div class="form-group">
            <label for="hexa">Code couleur</label>
            <input id="hexa" type="color" class="form-control" name="hexa" value="{{ post.hexa }}">
        </div>

        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-plus"
                                                            aria-hidden="true"> Ajouter</span></button>

        <a href="admin.php?route=admincolor" class="pull-right btn btn-danger">
        <span class="glyphicon glyphicon-remove"
              aria-hidden="true"> Annuler</span></a>
    </form>

{% endblock %}
