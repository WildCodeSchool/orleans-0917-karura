{% extends 'base.html.twig' %}

{% block pageTitle %}Contact{% endblock %}

{% block content %}

    <div class="form">
        <h2>Une question, un renseignement... Contactez-nous !</h2>

        <form class="contactForm" action="" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="gender">Civilité</label>
                <input type="radio" id="formGenderMadame" name="gender" value="Madame" checked> Madame
                <input type="radio" id="formGenderMonsieur" name="gender" value="Monsieur"> Monsieur
            </div>

            <div class="form-group">
                <label for="formLastName" class="control-label">Nom * </label>
                <input type="text" id="formLastName" class="form-control" name="formLastName" value="{{ post.formLastName ? post.formLastName }}" required>
                <p class="errorForm">{{ errors['formLastName'] ? errors['formLastName'] }}</p>

                <div class="form-group">
                    <label for="firstNameForm" class="control-label">Prénom </label>
                    <input type="text" id="firstNameForm" class="form-control" name="formFirstName" value="{{ post.formFirstName ? post.formFirstName }}">
                </div>

                <div class="form-group">
                    <label for="formTel">Téléphone </label>
                    <input type="tel" pattern="0[1-8]([-. ]?[0-9]{2}){4}" id="formTel" class="form-control"
                           name="formTel" value="{{ post.formTel ? post.formTel }}">
                </div>

                <div class="form-group">
                    <label for="formMail">E-mail * </label>
                    <input type="email" pattern="[a-z0-9._-]+@[a-z0-9._-]{2,}\.[a-z]{2,4}$" id="formMail"
                           class="form-control"
                           name="formMail" value="{{ post.formMail ? post.formMail }}" required>
                    <p class="errorForm">{{ errors['formMail'] ? errors['formMail'] }}</p>
                </div>

                <div class="form-group">
                    <label for="formMessage">Message / Question * </label>
                    <textarea id="formMessage" class="form-control" name="formMessage" required>{{ post.formMessage ? post.formMessage : (post.modelName ? "À propos du modèle " ~ post.modelName ~ " :")}}</textarea>
                    <p class="errorForm">{{ errors['formMessage'] ? errors['formMessage'] }}</p>
                </div>

                <div class="mendatory-fields">Les champs suivis d'un * sont obligatoires</div>

                <div class="form-group form-upload">
                    <label for="formFile">Pièce-jointe (un seul fichier accepté) : </label>
                    <input type="file" id="formFile" name="formFile">
                    <p class="errorForm">{{ errors['formFile'] ? errors['formFile'] }}</p>
                </div>
                <button type="submit" class="btn btn-success button-form-submit" data-toggle="modal"
                        data-target="#confirm-submit" name="submitForm" value="1"><span class="glyphicon glyphicon-ok"
                                                            aria-hidden="true"> Envoyer</span></button>
        </form>
    </div>

{% endblock %}
